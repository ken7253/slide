{
    "include": ["./**/*.ts"],
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "swc": true
    }
}
